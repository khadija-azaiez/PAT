<div class="c-card-product col mb-5">
    <div class="card h-100">
        <!-- Sale badge-->
        <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
        <!-- Product image-->
        <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="{{ product.name }}"/>
        <!-- Product details-->
        <div class="card-body p-4">
            <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder">{{ product.name }}</h5>
                <!-- Product price-->
                <span id="product-price">{{ product.price }}</span> $
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center">
                <a onclick="retireProductToBasket({{ product.id }})" class="btn btn-outline-dark mt-auto" href="#"
                   title="Ajouter au panier">
                    -
                </a>

                <div class="btn btn-outline-dark mt-auto">
                    <i class="bi-cart-fill me-1"></i>
                </div>

                <a onclick="addProductToBasket({{ product.id }})" class="btn btn-outline-dark mt-auto" href="#"
                   title="Ajouter au panier">
                    +
                </a>
                <div class="delete">
                    <a class="btn" href="{{ path('delete',{'id': product.id}) }}" title="suprimer">
                        Supprimer
                    </a>
                </div>

                <div class="edit">
                    <a class="btn" href="{{ path('edit_product',{'id': product.id}) }}" title="modifier">
                        Modifier
                    </a>
                </div>

                <div class="view">
                    <a class="btn" href="{{ path('view',{'id': product.id}) }}" title="voir">
                        voir
                    </a>
                </div>

            </div>

        </div>

    </div>
</div>
