{% extends 'layout.html.twig' %}

{% block content %}

    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                <div class="modal-content">
                    <div class="modal-header border-bottom-0 d-flex justify-content-between">
                        <h5 class="modal-title">
                            Commande numéro: {{ order.number }}
                        </h5>
                        <h5 class="modal-title" id="exampleModalLabel">
                            Client: {{ order.customer.name }}
                        </h5>
                    </div>
                    <div class="modal-body">
                        <table class="table table-basket">
                            <thead>
                            <tr>
                                <th scope="col">Produit</th>
                                <th scope="col">Prix</th>
                                <th scope="col">Quantité</th>
                                <th scope="col">Total</th>
                            </tr>
                            </thead>
                            <tbody id="basket-content">
                                {% for orderLine in order.orderLines %}
                                    <tr>
                                        <td>{{ orderLine.product.name }}</td>
                                        <td>{{ orderLine.product.price }} €</td>
                                        <td class="qty">{{ orderLine.quantity }}</td>
                                        <td>{{ orderLine.totalPrice }} €</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        <div class="d-flex justify-content-end">
                            <h5>Total: <span id="basket-total-price" class="price text-success">{{ order.totalPrice }}</span>€</h5>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </section>

{% endblock %}
