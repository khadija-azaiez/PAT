{% extends 'layout.html.twig' %}

{% block content %}
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-4 row-cols-xl-3 justify-content-center">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path('login') }}" method="post">

                    <div class="form-group">
                        <label for="username" class="form-control-label">Email</label>
                        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
                    </div>
                    <div class="form-group mt-3">
                        <label for="password" class="form-control-label">Mot de passe</label>
                        <input type="password" class="form-control" id="password" name="_password"/>
                    </div>

                    <button class="btn btn-outline-dark mt-3" type="submit">se connecter</button>

                    <p class="mt-5">
                        Pas de compte ? <a href="{{ path('user_registration') }}">inscrivez vous !</a>
                    </p>
                </form>


            </div>
        </div>
    </section>
{% endblock %}
