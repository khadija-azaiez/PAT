<div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <form action="{{ path('eshop_order_create') }}" method="post">
                <div class="modal-header d-flex justify-content-center border-bottom-0">
                    <h5 class="modal-title" id="exampleModalLabel">
                        Votre panier
                    </h5>
                </div>
                <div class="modal-body">
                    <table class="table table-basket">
                        <thead>
                        <tr>
                            <th scope="col">Produit</th>
                            <th scope="col">Prix</th>
                            <th scope="col">Quantité</th>
                            <th scope="col">Total</th>
                        </tr>
                        </thead>
                        <tbody id="basket-content">

                        </tbody>
                    </table>
                    <div class="d-flex justify-content-end">
                        <h5>Total: <span id="basket-total-price" class="price text-success">0</span>€</h5>
                    </div>
                </div>
                <div class="modal-footer border-top-0 d-flex justify-content-end">
                    {% if app.user is null %}
                        <a href="{{ path('login') }}" class="btn btn-success">Se connecter</a>
                    {% else %}
                        <button type="submit" onclick="clearBasket()" class="btn btn-success">Commander</button>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>
</div>

